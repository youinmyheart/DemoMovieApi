<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MovieHeader">
        <item name="fontFamily">helvetica</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/movie_header</item>
    </style>

    <style name="HeaderMargin">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">18dp</item>
    </style>

    <style name="IconSize">
        <item name="android:layout_width">22dp</item>
        <item name="android:layout_height">22dp</item>
    </style>

    <style name="MoviePointText">
        <item name="fontFamily">helvetica</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#F1CA23</item>
    </style>

    <style name="MoviePointTextSmall">
        <item name="fontFamily">helvetica</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#F1CA23</item>
    </style>

    <style name="MovieDateText">
        <item name="fontFamily">helvetica</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/movie_header</item>
    </style>

    <style name="MovieGenreText">
        <item name="fontFamily">helvetica</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="MovieTitle">
        <item name="fontFamily">helvetica</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/movie_header</item>
    </style>

    <style name="MovieOverview">
        <item name="fontFamily">helvetica</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#4A4A4A</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ReadMore">
        <item name="fontFamily">helvetica</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#007AD9</item>
    </style>

    <style name="Favorite">
        <item name="fontFamily">helvetica</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="header_type">
        <item name="fontFamily">helvetica</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#4A4A4A</item>
    </style>

    <style name="number_star">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#9B9B9B</item>
    </style>

    <style name="comment_button">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="review_author">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#4A4A4A</item>
    </style>

    <style name="review_content">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#4A4A4A</item>
    </style>
</resources>