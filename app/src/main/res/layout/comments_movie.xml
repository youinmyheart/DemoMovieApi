<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="20dp">
        <ImageView
            android:id="@+id/imvAvatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:layout_marginStart="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_author"
            android:text="Selena Lam"
            style="@style/review_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/review_content"
            android:text="This is test"
            android:maxLines="2"
            android:ellipsize="end"/>
        <LinearLayout
            android:id="@+id/container_rate_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_movie_point"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.0"
                android:layout_gravity="center_vertical"
                style="@style/MoviePointTextSmall" />
            <ImageView
                android:id="@+id/imv_star_1"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_star_gray_2"/>
            <ImageView
                android:id="@+id/imv_star_2"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_star_gray_2"/>
            <ImageView
                android:id="@+id/imv_star_3"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_star_gray_2"/>
            <ImageView
                android:id="@+id/imv_star_4"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_star_gray_2"/>
            <ImageView
                android:id="@+id/imv_star_5"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_star_gray_2"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_time_ago"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="1 hour ago"
            android:textSize="10sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="13dp"
            android:background="@color/divider"/>
    </LinearLayout>
</LinearLayout>